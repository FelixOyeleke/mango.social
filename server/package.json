{
  "name": "immigrant-voices-server",
  "version": "2.0.0",
  "description": "Backend API for Immigrant Voices",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:images": "tsx src/db/run-migration.ts",
    "db:migrate:jobs": "tsx src/db/migrations/004_create_jobs_tables.ts",
    "db:migrate:messaging": "tsx src/db/migrations/005_create_messaging_tables.ts",
    "db:migrate:features": "tsx src/db/migrations/006_add_reposts_and_communities.ts",
    "db:migrate:username": "tsx src/db/migrations/007_add_username.ts",
    "db:migrate:banner": "tsx src/db/migrations/008_add_banner_storage.ts",
    "db:migrate:follows": "tsx src/db/migrations/009_add_follows.ts",
    "db:migrate:all": "npm run db:migrate && npm run db:migrate:images && npm run db:migrate:jobs && npm run db:migrate:messaging && npm run db:migrate:features && npm run db:migrate:username && npm run db:migrate:banner && npm run db:migrate:follows",
    "db:seed": "tsx src/db/seed.ts",
    "db:seed:jobs": "tsx src/db/seed-jobs.ts",
    "db:seed:messages": "tsx src/db/seed-messages.ts",
    "db:create-admin": "tsx src/db/create-admin.ts",
    "db:make-test-admin": "tsx src/db/make-test-admin.ts",
    "db:check": "tsx src/db/check-users.ts",
    "db:check:schema": "tsx src/db/check-schema.ts",
    "db:clean": "tsx src/db/clean-dummy-data.ts",
    "deploy:setup": "npm run db:migrate:all && npm run db:seed && npm run db:create-admin",
    "test": "vitest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}
